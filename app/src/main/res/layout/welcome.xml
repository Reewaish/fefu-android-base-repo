<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Welcome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/welcome_image"
            android:layout_width="wrap_content"
            android:layout_height="335dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_screen_bicycles" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/welcome_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:fontFamily="casual"
            android:text="@string/welcome_1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/text_1"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="23dp"
            android:fontFamily="casual"
            android:text="@string/welcome_2"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/text_2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="80dp"
            android:fontFamily="casual"
            android:text="@string/welcome_3"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/btn_1"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="86dp"
            android:fontFamily="casual"
            android:text="@string/welcome_4"
            android:textAllCaps="false"
            android:textColor="@color/purple_700"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>